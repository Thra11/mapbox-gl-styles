[
  {
    "id": "building-outline",
    "type": "line",
    "source": "%source%",
    "source-layer": "building",
    "paint": {
      "line-width": 2,
      "line-opacity": {
        "stops": [
          [14, 0],
          [14.5, 1]
        ]
      },
      "line-color": {
        "stops": [
          [14, "%building_border_zoom_low%"],
          [15, "%building_border_zoom_high%"]
        ]
      }
    }
  },
  {
    "id": "building",
    "type": "fill",
    "source": "%source%",
    "source-layer": "building",
    "paint": {
      "fill-color": "%building%",
      "fill-opacity": {
        "stops": [
          [14, 0],
          [14.5, 1]
        ]
      },
      "fill-antialias": true
    }
  }
]
