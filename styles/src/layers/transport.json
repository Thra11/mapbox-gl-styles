[
  {
    "id": "transport",
    "type": "symbol",
    "source": "%source%",
    "source-layer": "poi",
    "minzoom": 15,
    "filter": [
      "all",
      [
        "==",
        "$type",
        "Point"
      ],
      [
        "==",
        "class",
        "transport"
      ]      
    ],
    "layout": {
      "text-padding": 2,
      "text-font": [
        "Noto Sans Bold"
      ],
      "text-anchor": "top",
      "icon-image": "{symbol}-11",
      "icon-size": 1,
      "text-field": "{%name%}",
      "text-offset": [
        0,
        0.6
      ],
      "text-size": %size_medium%,
      "text-max-width": 9
    },
    "paint": {
      "text-halo-blur": 0.5,
      "text-color": "%poi_text%",
      "text-halo-width": 1,
      "text-halo-color": "%poi_halo%"
    }
  }
]
